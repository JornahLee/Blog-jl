<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jornah.dao.ArticleDao">

    <!--表名-->
    <!--文章表列名-->
    <sql id="BASE_TABLE">
        t_contents
    </sql>

    <!--用户表-->
    <sql id="BASE_COLUMN">
        c.cid, c.title, c.titlePic, c.slug, c.created, c.modified, c.article, c.authorId,
        c.type, c.status, c.tags, c.categories, c.hits, c.commentsNum, c.allowComment,
        c.allowPing, c.allowFeed, c.orderWeight
    </sql>



    <select id="findAll" resultType="com.jornah.model.newP.Article">
        SELECT
          <include refid="BASE_COLUMN"/>
        FROM
          <include refid="BASE_TABLE"/> AS c
    </select>
</mapper>
